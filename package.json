{
  "name": "soltrack-frontend",
  "version": "1.0.0",
  "description": "SolTrack Frontend and Auth Server",
  "type": "module",
  "main": "server.ts",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "tsx watch server.ts",
    "dev:frontend": "vite",
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "tsc --project tsconfig.server.json",
    "build:frontend": "vite build",
    "preview": "vite preview",
    "start": "node dist/server.js",
    "type-check": "tsc --noEmit",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop soltrack-frontend",
    "pm2:restart": "pm2 restart soltrack-frontend",
    "pm2:delete": "pm2 delete soltrack-frontend",
    "pm2:logs": "pm2 logs soltrack-frontend",
    "pm2:status": "pm2 status soltrack-frontend",
    "pm2:monit": "pm2 monit",
    "pm2:save": "pm2 save",
    "pm2:deploy": "./deploy.sh"
  },
  "keywords": [
    "solana",
    "blockchain",
    "tracking",
    "frontend",
    "auth"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "chart.js": "^4.5.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-session": "^1.18.1",
    "http-proxy-middleware": "^3.0.3",
    "ioredis": "^5.8.2",
    "pg": "^8.13.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.0",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.5"
  }
}
